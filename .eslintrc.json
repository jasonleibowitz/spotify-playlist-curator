{
  "extends":["airbnb", "next/core-web-vitals", "eslint:recommended", "next", "prettier"],
  "settings": {
    "next": {
      "rootDir": "./src"
    }
  },
  "rules": {
    "import/extensions": 0,
    "react/jsx-filename-extension": [2, { "extensions": [".js", ".tsx" ]}],
    "react/jsx-props-no-spreading": [1, { "exceptions": ["Component" ]} ],
    "react/function-component-definition": [2, { "namedComponents": "arrow-function", "unnamedComponents": "arrow-function" }]
  }
}
